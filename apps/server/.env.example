# Database Configuration
# PostgreSQL connection string
# Format: postgresql://<username>:<password>@<host>:<port>/<database>
# For hosted databases (Supabase/Neon), use the Session Pooler URL if your host only supports IPv4
DATABASE_URL="postgresql://username:password@localhost:5432/unistudy"

# JWT Configuration
# Generate strong secrets using: openssl rand -base64 32
JWT_SECRET="<generate_a_random_32_byte_secret_here>"
JWT_REFRESH_SECRET="<generate_a_different_32_byte_secret_here>"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Google Gemini AI API
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY="<your_google_gemini_api_key>"

# Application Settings
NODE_ENV="development"
PORT=3001

# Frontend URL (for CORS and email links)
APP_URL="http://localhost:3000"
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:3001"

# Admin Credentials (for admin dashboard access)
# IMPORTANT: Change these in production!
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="<change_this_in_production>"

# Email Configuration (optional - defaults to console logging)
EMAIL_PROVIDER="console"  # Options: console, sendgrid, resend, ses
EMAIL_FROM="noreply@unistudy.ng"
# EMAIL_API_KEY="<your_email_provider_api_key>"  # Uncomment when using real email service

# File Upload Configuration (optional)
# MAX_FILE_SIZE=10485760  # 10MB in bytes
# UPLOAD_DIR="./uploads"

# Redis Configuration (optional - for caching)
# REDIS_HOST="localhost"
# REDIS_PORT=6379
# REDIS_PASSWORD=""

# Sentry Error Tracking (optional - for production monitoring)
# SENTRY_DSN="<your_sentry_dsn>"

# Rate Limiting
THROTTLE_TTL=60000  # Time window in milliseconds
THROTTLE_LIMIT=100  # Max requests per window
